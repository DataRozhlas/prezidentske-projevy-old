.projev-selector
  ol
    list-style-type none
    margin 0px
    padding 0px
    float left
    width 100%
    position absolute
    height 90px
    opacity 0.2
    transition opacity 0.4s
    li
      box-sizing content-box
      display block
      width 14px
      height 90px
      top 0px
      position absolute
      transition top 0.2s
      .point
        box-sizing content-box
        position absolute
        top 3px
        left 3px
        width 7px
        height 7px
        border-radius 50%
        transition opacity 0.4s, transform 0.2s, height 0.4s
        &.gs
          opacity 0.8
      &:hover
        cursor pointer
        .hover-point
          top -10px
      &.uhde
        .point
          top 14px
        &:hover .hover-point
          top 5px !important
    &:not(:hover)
      .point.color
        height 7px !important
    &:hover
      opacity 1
      background white
      .point.gs
        opacity 0
      .point.color
        border-radius 2px
      .hover-point
        position absolute
        top 3px
        width 7px
        height 14px
        left 3px
        border-radius 2px
        transition top 0.2s
      li.uhde
        top 38px
        .hover-point
          top 18px

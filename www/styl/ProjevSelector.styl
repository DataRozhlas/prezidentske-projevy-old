.projev-selector
  position absolute
  width 980px
  height 60px
  background linear-gradient(to bottom, rgba(255,255,255,0.98) 0%,rgba(255,255,255,0.98) 50px,rgba(255,255,255,0) 100%);
  top -9px
  left 18px
  padding-top 9px
  transition height 0.4s
  z-index 2
  &:hover
    background linear-gradient(to top, rgba(255,255,255,0) 0%,rgba(255,255,255,0.98) 7px,rgba(255,255,255,0.98) 100%);
  &.top
    background transparent
  ol
    list-style-type none
    margin 0px
    padding 0px
    float left
    width 970px
    position absolute
    height 27px
    z-index 2
    li
      box-sizing content-box
      display block
      width 13px
      height 90px
      top -20px
      position absolute
      transition top 0.2s, opacity 0.4s
      opacity 0.2
      .point
        box-sizing content-box
        position absolute
        top 23px
        left 3px
        width 7px
        height 7px
        border-radius 50%
        transition opacity 0.4s, transform 0.2s, height 0.4s
        &.gs
          opacity 0.8
      .item-popisek
        position absolute
        top 1px
        left -35px
        width 80px
        text-align center
        font-size 0.72em
        opacity 0
        color #6
        z-index 2
        background linear-gradient(to left, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 20%,rgba(255,255,255,1) 80%,rgba(255,255,255,0) 100%);
        pointer-events none
        .president
          display none
      &.active
        opacity 1
        z-index 2
        .point
          opacity 1
          background #ab0000 !important
      &:hover
        cursor pointer
        z-index 3
        .point
          opacity 0.5
        .item-popisek
          opacity 1
      &.uhde
        .point
          top 34px
        .item-popisek
          top -37px
  &:not(:hover):not(.top)
    .point
      height 7px !important
    li.active .item-popisek
      opacity 1
      color #8
      .president
        padding-right 0.5em
        text-transform uppercase
        display inline
  &:hover
  &.top
    height 155px
    .point.gs
      opacity 0 !important
    .point
      border-radius 2px
    li.uhde
      top 18px
  &.top
    li
      opacity 0.4 !important
    li.active
      opacity 0.9 !important
  &:hover
    li
      opacity 1 !important
  &.top
    .point.gs
      opacity 1 !important
    &:hover
      .point.gs
        opacity 0 !important

  .popisky
    height 19px
    position relative
    opacity 0
    transition opacity 0.4s
    z-index 2
    .popisek
      position absolute
      text-transform uppercase
      font-size 0.72em
      color #6
      &:nth-child(1)
        left 141px
        width 67px
        text-align center
      &:nth-child(2)
        left 210px
      &:nth-child(3)
        left 262px
        width 133px
        text-align center
      &:nth-child(4)
        width 71px
        left 401px
        text-align center
      &:nth-child(5)
        left 477px
        width 185px
        text-align center
      &:nth-child(6)
        left 665px
        width 37px
        text-align center
      &:nth-child(7)
        left 719px
        width 121px
        text-align center
      &:nth-child(8)
        left 846px
        width 121px
        text-align center
      &:nth-child(9)
        right -14px
        text-align right
      &:nth-child(10)
        z-index 2
        top 100px
        right -14px
        transition top 0.2s
      &:nth-child(11)
        top 100px
        left 715px
      &:nth-child(12)
        left 0px
      &:nth-child(13)
        left 25px
        width 105px
        text-align center
  &:hover .popisky
  &.top .popisky
    opacity 1

  &.top .popisky .popisek:nth-child(10)
    top 60px !important

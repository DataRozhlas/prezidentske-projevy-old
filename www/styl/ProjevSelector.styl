.projev-selector
  position absolute
  width 980px
  height 65px
  background linear-gradient(to bottom, rgba(255,255,255,0.98) 0%,rgba(255,255,255,0.98) 55px,rgba(255,255,255,0) 100%);
  top -9px
  left 18px
  padding-top 9px
  transition height 0.4s
  z-index 2
  &:hover
    background linear-gradient(to top, rgba(255,255,255,0) 0%,rgba(255,255,255,0.98) 7px,rgba(255,255,255,0.98) 100%);
  &.top
    background transparent
  ol
    list-style-type none
    margin 0px
    padding 0px
    float left
    width 970px
    position absolute
    height 27px
    z-index 2
    li
      box-sizing content-box
      display block
      width 11px
      height 90px
      top -20px
      position absolute
      transition top 0.2s, opacity 0.4s
      opacity 0.2
      .point
        box-sizing content-box
        position absolute
        top 23px
        left 2px
        width 7px
        height 7px
        border-radius 50%
        transition opacity 0.4s, transform 0.2s, height 0.4s
        &.gs
          opacity 0.8
      .item-popisek
        position absolute
        top 1px
        left -35px
        width 80px
        text-align center
        font-size 0.72em
        opacity 0
        color #6
        z-index 2
        background linear-gradient(to left, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 20%,rgba(255,255,255,1) 80%,rgba(255,255,255,0) 100%);
        pointer-events none
        .president
          display none
      &.active
        opacity 1
        z-index 2
        .point
          opacity 1
          background #ab0000 !important
      &:hover
        cursor pointer
        z-index 3
        .point
          opacity 0.5
        .item-popisek
          opacity 1
      &.second-row
        z-index 3
        height 25px
        .point
          top 0px
        .item-popisek
          top -64px
  &:not(:hover):not(.top)
    .point
      height 7px !important
    li.active .item-popisek
      opacity 1
      color #8
      .president
        padding-right 0.5em
        text-transform uppercase
        display inline
    li.second-row
      top 15px
      .item-popisek
        top -34px
  &:hover
  &.top
    height 155px
    .point.gs
      opacity 0 !important
    .point
      border-radius 2px
    li.second-row
      top 45px
    li.second-row-4
      top 50px
      .item-popisek
        top -69px
    li.second-row-6
      top 48px
      .item-popisek
        top -67px
    li.second-row-8
      top 52px
      .item-popisek
        top -71px
    li.second-row-10
      top 50px
      .item-popisek
        top -69px
    li.second-row-12
      top 49px
      .item-popisek
        top -68px
    li.second-row-14
      top 47px
      .item-popisek
        top -66px
  &.top
    li
      opacity 0.4 !important
    li.active
      opacity 0.9 !important
    .popisky
      opacity 0.8 !important
  &:hover
    li
      opacity 1 !important
    .popisky
      opacity 1 !important
  &.top
    .point.gs
      opacity 1 !important
    &:hover
      .point.gs
        opacity 0 !important

  .popisky
    height 19px
    position relative
    opacity 0
    transition opacity 0.4s
    z-index 2
    .popisek
      position absolute
      text-transform uppercase
      font-size 0.72em
      color #6
      &:nth-child(1)
        left 192px
        text-align left
      &:nth-child(2)
        left 253px
      &:nth-child(3)
        left 300px

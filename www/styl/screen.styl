@import colors
@import prefixes
@import 'components/triangle'
@keyframes rotate
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)
body
  background white !important
#wrapper #nav-sub ul.sub
#nav-sub
  display none
#header
  height 50px !important
#bg-row
  background-image url('http://www.rozhlas.cz/img/e5/bg/zpravy-bg-r.jpg')
  position absolute
  top 0px
  left 0px
  width 100%
  height 40px
#footer2
  margin-top 90px
  background white
  border-top 1px solid #9
  p
    border 0px none
    a
      color #666
.ig
  @import basics
@import ProjevSelector
#wrapper-inner
  font-family 'PT Serif', sans-serif
  position relative
  .projev
    position relative
    margin-left 50px
    width 900px
    transition opacity 0.2s
    opacity 1
    &.fading
      opacity 0
  h1
    font-size 3.4em
    font-weight 400
    margin 1.6em 0px 0.5em 0px
    line-height 1.5em
  h2
    font-size 2em
    font-weight 400
    margin 1em 0px 1.5em 0px
    line-height 1.5em
    font-style italic
    max-width 700px
  .projev-content
    max-width 600px
    font-size 1.4em
    line-height 1.9em
    p
      font-weight 400
      text-indent 2em
      margin 1em 0px
      &:first-of-type
        text-indent 0px
      span[data-play-start]
        border-bottom 1px dotted ColorHeading
        position relative
        &:hover
          cursor pointer
        &:before
          display block
          background ColorHeading
          content: "▶"
          left -30px
          top 1px
          font-size 12px
          width 26px
          height @width
          line-height 20px
          text-align center
          border-radius 50%
          position absolute
          text-indent 0
          color white
          opacity 0
          padding-left 2px
          transition opacity 0.4s
          border 3px solid white
        &:hover:before
          opacity 1
        &.loading:before
          font-family arial
          content: "◦"
          font-size 23px
          text-align right
          animation rotate 2s infinite linear
        &.playing:before
          font-size 6px
          padding-left 2px
          content: "▌▌"
        &.loading:before
        &.playing:before
          opacity 1

  .medailon
    position absolute
    top 0px
    right 0px
    width 160px
    height 160px
    border-radius 50%
    border 1px solid #c
  .arrow
    position absolute
    top 31px
    font-size 120px
    height 100px
    width 60px
    padding-top 25px
    color black
    opacity 0.1
    transition opacity 0.4s
    &.left
      left -60px
      text-align left
    &.right
      right -60px
      text-align right
    &:hover
      cursor pointer
      opacity 1
    &.disabled
      opacity 0
      &:hover
        cursor default

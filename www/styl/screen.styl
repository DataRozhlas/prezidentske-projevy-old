@import colors
@import prefixes
@import 'components/triangle'
body
  background white !important
#wrapper #nav-sub ul.sub
#nav-sub
  display none
#header
  height 50px !important
#bg-row
  background-image url('http://www.rozhlas.cz/img/e5/bg/zpravy-bg-r.jpg')
  position absolute
  top 0px
  left 0px
  width 100%
  height 40px
#footer2
  margin-top 90px
  background white
  border-top 1px solid #9
  p
    border 0px none
    a
      color #666
.ig
  @import basics
@import ProjevSelector
#wrapper-inner
  font-family 'PT Serif', sans-serif
  position relative
  h1
    font-size 3.4em
    font-weight 400
    margin 1.5em 0px 0.5em 0px
    line-height 1.5em
  h2
    font-size 2em
    font-weight 400
    margin 1em 0px 1.5em 0px
    line-height 1.5em
    font-style italic
  .projev-content
    max-width 600px
    font-size 1.4em
    line-height 1.9em
    p
      font-weight 400
      text-indent 2em
      margin 1em 0px
      &:first-of-type
        text-indent 0px

.player
  position absolute
  right -57px
  top 200px
  width 274px
  opacity 0.1
  transition opacity 0.4s
  z-index 1
  &.playing
    opacity 0.6
  &.paused
    opacity 0.2
  &.loading
    opacity 0.9
  &:hover
    opacity 1
  .button
    font-size 60px
    width 100%
    text-align center
    position absolute
    top 0px
    left 0px
    line-height 60px
    opacity 0
    z-index 1
    transition opacity 0.2s
    &.pause
      font-size 29px
      line-height 65px
      padding-left 9px
    &.loading
      font-size 71px
      line-height 57px
      padding-bottom 11px
      width 42px
      left 50%
      margin-left -21px
      margin-left
      background yellow
  &.playing .button.pause
  &.paused .button.play
  &.loading .button.loading
    opacity 1
    z-index 2
  &.playing .button.pause
  &.paused .button.play
    cursor pointer
  &.loading .button.loading
    cursor default
    animation rotate 5s infinite linear


  .progress
    position absolute
    top 80px
    width 100%
    height 30px
    cursor pointer
    .line
      position absolute
      top 15px
      width 100%
      border-bottom 1px dotted black
    .point
      position absolute
      top 15px
      width 10px
      height 10px
      transform translate(-50%,-50%)
      background white
      border 1px solid black
      border-radius 50%
